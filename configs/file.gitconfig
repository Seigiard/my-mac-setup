[difftool "sourcetree"]
	cmd = /usr/local/bin/wbstorm diff $LOCAL $PWD/$REMOTE
	path =
[mergetool "sourcetree"]
	cmd = /usr/local/bin/wbstorm merge $PWD/$LOCAL $PWD/$REMOTE $PWD/$BASE $PWD/$MERGED
	trustExitCode = true
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true