[user]
    name = Andrew Borisenko
    email = seigiard@gmail.com
[push]
    followTags = true
    default = current
[pull]
    rebase = true
[rebase]
    autoStash = true
[core]
    editor = nano
    autocrlf = input
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/mitrichius/.gitignore_global
    pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
    co = checkout
    st = status
    di = diff
    ci = commit
    up = remote update
    br = branch
    history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = 11
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
    commit = yellow bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
