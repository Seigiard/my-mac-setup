// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "mcp-server-figma": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "figma_api_key": "YOUR_FIGMA_ACCESS_TOKEN"
      }
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "features": {
    // Which inline completion provider to use.
    "edit_prediction_provider": "zed"
  },
  "theme": "Ayu Light",
  // "theme": "Gruvbox Light Hard",
  "terminal": {
    // Enable auto-copy to clipboard when text is selected in the terminal
    "copy_on_select": true
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 120,
  "wrap_guides": [120],
  // Font style for the user interface (UI)
  "ui_font_size": 19,
  "ui_font_family": "Zed Plex Sans",
  // Font style for the code editing area (Buffer)
  "buffer_font_size": 18.0,
  "buffer_font_family": "Rec Mono Duotone",
  "buffer_font_weight": 400,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  // Hide navigation history buttons in the tab bar
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  // File icons and Git status in tabs
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_size": 2,
  "journal": {
    "path": "~/Dropbox/Knowledge Base",
    "hour_format": "hour24"
  },
  "base_keymap": "JetBrains",
  "when_closing_with_no_tabs": "keep_window_open",
  "formatter": {
    "code_actions": {
      "source.fixAll.eslint": true
    }
  },
  "languages": {
    "CSS": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.stylelint": true
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["tsgo", "vtsls"]
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "HTML": {
      "format_on_save": "on",
      "formatter": "language_server"
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        }
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "collaboration_panel": {
    // Whether to show the collaboration panel button in the status bar.
    "button": false,
    "dock": "left"
  },
  "chat_panel": {
    // Whether to show the collaboration panel button in the status bar.
    "button": "never",
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  }
}
