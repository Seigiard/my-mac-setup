{
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/hooks/file-suggestion.sh"
  },
  "cleanupPeriodDays": 365,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git push:*)",
      "Bash(ast-grep *)",
      "Bash(grep:*)",
      "Bash(rq *)",
      "Bash(jq *)",
      "Bash(gh *)",
      "Bash(find *)",
      "Bash(tree *)",
      "Bash(wc:*)",
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__github",
      "mcp__linear-server",
      "mcp__claude-in-chrome",
      "mcp__plugin_figma_figma",
      "Skill(superpowers:*)"
    ],
    "deny": ["Bash(rm -rf:*)"],
    "ask": [],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code — $(basename \"$PWD\")\" -message \"$CLAUDE_NOTIFICATION_MESSAGE\" -sound Ping -timeout 10"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code — $(basename \"$PWD\")\" -subtitle \"Session Complete\" -message \"Task completed\" -sound Ping -timeout 10"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/hooks/statusline.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "playwright@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "figma@claude-plugins-official": false,
    "explanatory-output-style@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": false,
    "superpowers@superpowers-marketplace": true
  },
  "additionalDirectories": [
    "/Users/seigiard/Dropbox/Knowledge Base",
    "/Users/seigiard/Dropbox/Knowledge Base/Calendar/",
    "~/Library/CloudStorage/Dropbox/Knowledge Base/",
    "~/Library/CloudStorage/Dropbox/Knowledge Base/Calendar/",
    "~/.claude/hooks/"
  ],
  "feedbackSurveyState": {
    "lastShownTime": 1754040532937
  }
}
